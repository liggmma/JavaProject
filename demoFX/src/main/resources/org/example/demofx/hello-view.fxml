<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>

<HBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demofx.HelloController"
      stylesheets="@style.css"
      id="rootHBox" styleClass="main-container">

    <!-- Left Panel -->
    <VBox id="leftPanel" styleClass="input-panel" prefWidth="350.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="Book Input" styleClass="section-header"/>

        <!-- Cover Photo -->
        <VBox spacing="10" alignment="CENTER" id="rowPhoto">
            <ImageView fx:id="bookCover" fitWidth="300" fitHeight="200"/>
            <VBox spacing="5">
                <Button text="Choose Cover" onAction="#chooseBookCover"/>
                <TextField fx:id="coverPathField" promptText="Cover Path" editable="false" visible="false"/>
            </VBox>
        </VBox>

        <!-- Title -->
        <HBox spacing="10" id="rowTitle" styleClass="input-row">
            <Label id="lblTitle" styleClass="form-label" text="Title" prefWidth="120"/>
            <TextField fx:id="txtTitle" id="txtTitle" styleClass="form-input" promptText="Book Title" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Author -->
        <HBox spacing="10" id="rowAuthor" styleClass="input-row">
            <Label id="lblAuthor" styleClass="form-label" text="Author" prefWidth="120"/>
            <TextField fx:id="txtAuthor" id="txtAuthor" styleClass="form-input" promptText="Author Name" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Genre -->
        <HBox spacing="10" id="rowGenre" styleClass="input-row">
            <Label id="lblGenre" styleClass="form-label" text="Genre" prefWidth="120"/>
            <HBox spacing="10" HBox.hgrow="ALWAYS">
                <ComboBox fx:id="genreCombo" id="comboGenre"
                          styleClass="form-combobox"
                          promptText="Genre"
                          HBox.hgrow="ALWAYS"
                          prefHeight="30"/>
                <Button text="+" id="btnAddGenre" styleClass="add-btn"
                        onAction="#openGenreView"/>
            </HBox>
        </HBox>

        <!-- Price -->
        <HBox spacing="10" id="rowPrice" styleClass="input-row">
            <Label id="lblPrice" styleClass="form-label" text="Price" prefWidth="120"/>
            <VBox id="priceBox" HBox.hgrow="ALWAYS">
                <TextField fx:id="txtPrice" id="txtPrice" styleClass="form-input" promptText="Price"/>
                <Label fx:id="priceErrorLabel" id="lblError" styleClass="error-label" text=""/>
            </VBox>
        </HBox>

        <!-- Buttons -->
        <HBox spacing="10" id="rowButtons" styleClass="button-row">
            <Button id="btnSave" styleClass="primary-btn" text="Save" onAction="#saveBook"/>
            <Button id="btnExit" styleClass="secondary-btn" text="Exit" onAction="#exitP"/>
        </HBox>

        <Label fx:id="statusLabel" id="lblStatus" styleClass="status-label" text=""/>

        <Region VBox.vgrow="ALWAYS" />
    </VBox>

    <!-- Right Panel -->
    <VBox id="rightPanel" styleClass="table-panel" spacing="10.0" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="10.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="Book List" styleClass="section-header"/>

        <HBox styleClass="table-controls" alignment="CENTER_LEFT" spacing="10.0">
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                <Button text="Update Book" onAction="#updateBook" styleClass="page-btn"/>
                <Button text="Delete Book" onAction="#deleteBook" styleClass="page-btn"/>
                <Label fx:id="updatingLabel" text="Updating..." visible="false" style="-fx-text-fill: blue; -fx-font-weight: bold;"/>
            </HBox>


            <Region HBox.hgrow="ALWAYS" />
            <Label text="Page 1 of 5" styleClass="page-info"/>
            <Button text="Previous" styleClass="page-btn"/>
            <Button text="Next" styleClass="page-btn"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="bookTable" id="tblBook" styleClass="table-view-custom" VBox.vgrow="ALWAYS">
            <columns>
                <!-- ID -->
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <!-- Title -->
                <TableColumn fx:id="colTitle" text="Title" prefWidth="150"/>
                <!-- Author -->
                <TableColumn fx:id="colAuthor" text="Author" prefWidth="150"/>
                <!-- Price -->
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                <!-- Category -->
                <TableColumn fx:id="colCategory" text="Category" prefWidth="100"/>
                <!-- Genre -->
                <TableColumn fx:id="colGenre" text="Genre" prefWidth="120"/>
                <!-- Cover -->
                <TableColumn fx:id="colCover" text="Cover" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>

</HBox>
